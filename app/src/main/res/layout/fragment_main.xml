<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/linearLayout3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_wrapHeight="500"
        tools:layout_conversion_wrapWidth="1080"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView">

        <ImageButton
            android:id="@+id/facebook"
            android:layout_width="@dimen/social_image_dimension"
            android:layout_height="@dimen/social_image_dimension"
            android:layout_margin="@dimen/social_dimensions"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_facebook"/>

        <ImageButton
            android:id="@+id/twitter"
            android:layout_width="@dimen/social_image_dimension"
            android:layout_height="@dimen/social_image_dimension"
            android:layout_margin="@dimen/social_dimensions"
            android:layout_weight="0"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_twitter"
            />

        <ImageButton
            android:id="@+id/linkedin"
            android:layout_width="@dimen/social_image_dimension"
            android:layout_height="@dimen/social_image_dimension"
            android:layout_margin="@dimen/social_dimensions"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_linkedin"
            />

        <ImageButton
            android:id="@+id/youtube"
            android:layout_width="@dimen/social_image_dimension"
            android:layout_height="@dimen/social_image_dimension"
            android:layout_margin="@dimen/social_dimensions"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_youtube"
            />

        <ImageButton
            android:id="@+id/web"
            android:layout_width="@dimen/social_image_dimension"
            android:layout_height="@dimen/social_image_dimension"
            android:layout_margin="@dimen/social_dimensions"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_global"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>