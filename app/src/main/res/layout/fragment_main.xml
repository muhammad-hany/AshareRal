                                android:layout_height="76dp"
                                android:adjustViewBounds="true"

                                app:srcCompat="@drawable/ic_poll"
                                tools:srcCompat="@drawable/ic_poll"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/rabelo"
                                android:singleLine="false"
                                android:text="Poll"
                                android:textColor="@color/grid_item_text_color"
                                android:textSize="20sp"
                                android:textStyle="bold"/>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_link"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_margin="@dimen/grid_element_margin"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_columnWeight="0.5">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="76dp"
                                android:layout_height="76dp"
                                android:adjustViewBounds="true"

                                app:srcCompat="@drawable/ic_link"
                                tools:srcCompat="@drawable/ic_link"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/rabelo"
                                android:singleLine="false"
                                android:text="Links"
                                android:textColor="@color/grid_item_text_color"
                                android:textSize="20sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_margin="@dimen/grid_element_margin"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_columnWeight="0.5">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="76dp"
                                android:layout_height="76dp"
                                android:adjustViewBounds="true"

                                app:srcCompat="@drawable/ic_admin"
                                tools:srcCompat="@drawable/ic_admin"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/rabelo"
                                android:singleLine="false"
                                android:text="Admin"
                                android:textColor="@color/grid_item_text_color"
                                android:textSize="20sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/btn_chapters"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_margin="@dimen/grid_element_margin"

                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_columnWeight="0.5">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
