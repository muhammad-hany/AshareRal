                            <ImageView

                                android:layout_width="76dp"
                                android:layout_height="76dp"
                                android:adjustViewBounds="true"

                                app:srcCompat="@drawable/ic_chapters"
                                tools:srcCompat="@drawable/ic_chapters"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/rabelo"
                                android:singleLine="false"
                                android:text="Chapters"
                                android:textColor="@color/grid_item_text_color"
                                android:textSize="20sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/btn_committee"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_margin="@dimen/grid_element_margin"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_columnWeight="0.5">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="76dp"
                                android:layout_height="76dp"
                                android:adjustViewBounds="true"

                                app:srcCompat="@drawable/ic_committee"
                                tools:srcCompat="@drawable/ic_committee"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/rabelo"
                                android:singleLine="false"
                                android:text="Committee"
                                android:textColor="@color/grid_item_text_color"
                                android:textSize="20sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_dls"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_margin="@dimen/grid_element_margin"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_columnWeight="0.5">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="76dp"
                                android:layout_height="76dp"
                                android:adjustViewBounds="true"

                                app:srcCompat="@drawable/ic_dls"
                                tools:srcCompat="@drawable/ic_dls"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/rabelo"
                                android:singleLine="false"
                                android:text="DLs"
                                android:textColor="@color/grid_item_text_color"
                                android:textSize="20sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/btn_officers"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_margin="@dimen/grid_element_margin"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_columnWeight="0.5">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="76dp"
                                android:layout_height="76dp"
                                android:adjustViewBounds="true"

                                app:srcCompat="@drawable/ic_officers"
                                tools:srcCompat="@drawable/ic_officers"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/rabelo"
                                android:singleLine="false"
                                android:text="Officers"
                                android:textColor="@color/grid_item_text_color"
                                android:textSize="20sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </androidx.gridlayout.widget.GridLayout>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</LinearLayout>