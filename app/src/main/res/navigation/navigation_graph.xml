<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/navigation_graph"
            app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.seagate.ashareral.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/toNewsFragment"
            app:destination="@id/newsFragment"/>
        <action
            android:id="@+id/toEventsFragment"
            app:destination="@id/eventsFragment"/>
        <action
            android:id="@+id/toChaptersFragment"
            app:destination="@id/ChaptersFragment"/>
        <action
            android:id="@+id/toAdminMainFragment"
            app:destination="@id/adminMainFragment"/>
    </fragment>
    <fragment
        android:id="@+id/newsFragment"
        android:name="com.seagate.ashareral.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news">
        <action
            android:id="@+id/toNewsDetails"
            app:destination="@id/newsDetails"/>
        <action
            android:id="@+id/toAdminNewsFragment"
            app:destination="@id/adminNewsFragment"/>
    </fragment>
    <fragment
        android:id="@+id/eventsFragment"
        android:name="com.seagate.ashareral.EventsFragment"
        android:label="fragment_events"
        tools:layout="@layout/fragment_events">
        <action
            android:id="@+id/action_admin_event"
            app:destination="@id/adminEventsFragment"/>
    </fragment>
    <fragment
        android:id="@+id/ChaptersFragment"
        android:name="com.seagate.ashareral.ChaptersFragment"
        android:label="fragment_chapters"
        tools:layout="@layout/fragment_chapters"/>
    <fragment
        android:id="@+id/adminNewsFragment"
        android:name="com.seagate.ashareral.AdminNewsFragment"
        android:label="fragment_admin"
        tools:layout="@layout/fragment_admin_news"/>
    <fragment
        android:id="@+id/newsDetails"
        android:name="com.seagate.ashareral.NewsDetails"
        android:label="fragment_news_details"
        tools:layout="@layout/fragment_news_details"/>
    <fragment
        android:id="@+id/adminMainFragment"
        android:name="com.seagate.ashareral.AdminMainFragment"
        android:label="fragment_admin_menu"
        tools:layout="@layout/fragment_admin_main">
        <action
            android:id="@+id/toAdminNewsFragment"
            app:destination="@+id/adminNewsFragment"
            />
        <action
            android:id="@+id/toAdminEventFragment"
            app:destination="@id/adminEventsFragment"/>
        <action
            android:id="@+id/toNewsFragment"
            app:destination="@+id/newsFragment"/>
        <action
            android:id="@+id/toEventsFragment"
            app:destination="@id/eventsFragment"/>
    </fragment>
    <fragment
        android:id="@+id/adminEventsFragment"
        android:name="com.seagate.ashareral.AdminEventsFragment"
        android:label="fragment_admin_events"
        tools:layout="@layout/fragment_admin_events"/>
</navigation>